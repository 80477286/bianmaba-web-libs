{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "noImplicitAny": false,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["ES6", "ES2016", "ES2020", "ES2021", "ESNext", "dom"]
  },
  "include": ["packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.vue"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.md"
  ]
}
